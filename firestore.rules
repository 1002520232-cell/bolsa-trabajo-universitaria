rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read access to public data (ofertas, empresas) without authentication
    match /ofertas/{ofertaId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    match /empresas/{empresaId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Authenticated users only for private data
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /postulaciones/{postulacionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Admin access
    match /usuarios/{userId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol == 'admin';
    }

  }
}
